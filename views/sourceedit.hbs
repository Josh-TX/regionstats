{{#section 'styles'}}
{{/section}}
	{{>navigation_bar}}
	<div class="container" ng-controller="editSource">
		<h1>Source Submission</h1>
		<hr>
		<form enctype="multipart/form-data" accept-charset="UTF-8" ng-submit="submitForm()">
			
			<h2>Region</h2>
			<div class="row">
				<div class="col-sm-4">
					<h4>Original Value</h4>
				</div>
				<div class="col-sm-4">
					<h4>New Value</h4>
				</div>
				<div class="col-sm-4">
					<h4>Actions</h4>
				</div>
			</div>	
			
			<div class="row top-buffer"
				ng-class="{'has-success':(form.parent != originals[0].parent_id)}">
				<div class="col-sm-4">
					<label class="help-block" ng-bind="originals[0].parent_id"></label>
				</div>
				<div class="col-sm-4">
					<input type="text" class="form-control" ng-model="form.parent" disabled></input>
				</div>
				<div class="col-sm-4 btn-group">
				<button type="button" class="btn btn-default" ng-click="regionModal.show=true">Change Region</button>
					<button type="button" class="btn btn-default" ng-click="form.parent = originals[0].parent_id">Reset</button>
				</div>
			</div>
			
			<h2>Publisher</h2>
			<div class="row">
				<div class="col-sm-4">
					<h4>Original Value</h4>
				</div>
				<div class="col-sm-4">
					<h4>New Value</h4>
				</div>
				<div class="col-sm-4">
					<h4>Actions</h4>
				</div>
			</div>	
			
			<div class="row top-buffer"
				ng-class="{'has-success':(form.type != originals[0].region_type_id)}">
				<div class="col-sm-4">
					<label class="help-block" ng-bind="typeModal.types[originals[0].region_type_id]"></label>
				</div>
				<div class="col-sm-4">
					<input type="text" class="form-control" ng-model="typeModal.types[form.type]" disabled></input>
				</div>
				<div class="col-sm-4 btn-group">
				<button type="button" class="btn btn-default" ng-click="typeModal.show=true">Change Publisher</button>
					<button type="button" class="btn btn-default" ng-click="form.type = originals[0].region_type_id">Reset</button>
				</div>
			</div>		

			<h2>Title</h2>
			<div class="row">
				<div class="col-sm-4">
					<h4>Original Value</h4>
				</div>
				<div class="col-sm-4">
					<h4>New Value</h4>
				</div>
				<div class="col-sm-4">
					<h4>Actions</h4>
				</div>
			</div>	
			
			<div class="row top-buffer"
				ng-class="{'has-success':(form.type != originals[0].region_type_id)}">
				<div class="col-sm-4">
					<label class="help-block" ng-bind="typeModal.types[originals[0].region_type_id]"></label>
				</div>
				<div class="col-sm-4">
					<input type="text" class="form-control" ng-model="typeModal.types[form.type]" disabled></input>
				</div>
				<div class="col-sm-4 btn-group">
				<button type="button" class="btn btn-default" ng-click="typeModal.show=true">Change Publisher</button>
					<button type="button" class="btn btn-default" ng-click="form.type = originals[0].region_type_id">Reset</button>
				</div>
			</div>
			<h2>URL</h2>
			
			{{#if permissions.save}}
			<input class="btn btn-primary btn-lg" type="submit" ng-click="form.action='save'" value="save changes"></input>
			{{/if}}
			{{#if permissions.approve}}
			<input class="btn btn-primary btn-lg" type="submit" ng-click="form.action='approve'" value="approve submission"></input>
			{{/if}}
			{{#if permissions.delete}}
			<input class="btn btn-primary btn-lg" type="submit" ng-click="form.action='delete'" value="delete submission"></input>
			{{/if}}
			{{#if permissions.reject}}
			<input class="btn btn-primary btn-lg" type="submit" ng-click="form.action='reject'" value="reject submission"></input>
			{{/if}}
		</form>
		
		<!-- modal -->
		<div modal="regionModal.show" str="regionModal.title" callback="regionModal.select()">
			<h2 class="top-no-buffer"><small ng-bind="regionModal.stack[regionModal.stack.length - 1].name"></small></h2>
			<input type="text" class="form-control" placeholder="filter"></input>
			<hr>
			
		</div>
		<div modal="typeModal.show" str="typeModal.title">
			<button class="btn btn-default" ng-repeat="(id, name) in typeModal.types" ng-click="typeModal.select(id)">{{ng "name"}}</button>
		</div>
	</div><!-- end container -->
	
{{#section 'scripts'}}

<script type="application/javascript">
    var app = angular.module("myApp", []);

	app.controller("editSource", function($http, $scope, $timeout){
		$scope.form = {};
		$scope.form.subid = {{subid}};
		$http.post("/source/subsources", {subid: $scope.form.subid}).then(sourceListHandler, errorCallback)
		/*$scope.regionModal = {}
		$scope.regionModal.stack = [{id: 0, name: "World"}];
		$scope.regionModal.show = false;
		$scope.regionModal.title = "Select Parent Region";
		
		$scope.regionModal.name = "not selected";
		$scope.regionModal.select = function(){
			var region = $scope.regionModal.stack[$scope.regionModal.stack.length - 1];
			$scope.regionModal.name = region.name;
			$scope.form.parent = region.id;
		}*/
		/*$scope.typeModal = {}
		$scope.typeModal.types = {
			"1": "Country",
			"2": "City",
			"3": "State"
		}
		$scope.typeModal.show = false;
		$scope.typeModal.title = "Select Region Type";
		$scope.typeModal.name = "not selected";
		$scope.typeModal.select = function(id){
			$scope.typeModal.name = this.types[id];
			$scope.form.type = id;
			$scope.typeModal.show = false;
		}
		$scope.form.data = [];*/

		$scope.publisherModal = {}
		$scope.publisherModal.types = {
			"1": "CollegeBoard",
			"2": "New York Times",
			"3": "United States Census Bureau"
		}
		$scope.publisherModal.show = false;
		$scope.publisherModal.title = "Select Region Type";
		$scope.publisherModal.name = "not selected";
		$scope.publisherModal.select = function(id){
			$scope.publisherModal.name = this.types[id];
			$scope.form.type = id;
			$scope.publisherModal.show = false;
		}
		
		$scope.form = {};
		$scope.fileName = "not selected";
		$scope.form.data = [];

		$scope.regionModal = getRegionModal($scope.form, $http);

		$scope.submitForm = function(){
			$scope.error = uploadSourceValidate($scope.form);
			if ($scope.error.none)
				$http.post('/source/edit', $scope.form).then(successCallback, errorCallback);
		}
		
		function successCallback(response){
			if (response.data.redirect){
				window.location.href = response.data.redirect;
			}
			else if (response.data.message){
				alert(response.data.message)
			}
			else {
				alert("unknown response");
			}
		}
		
		function errorCallback(response){
			alert("an error occured: " + JSON.stringify(response.data))
		}
		function sourceListHandler(response){
			$timeout(function(){
				console.log(response.data);
				$scope.originals = response.data;
				$scope.form.parent = $scope.originals[0].parent_id;
				$scope.form.type = $scope.originals[0].region_type_id;
				for (var i = 0; i < $scope.originals.length; i++){
					$scope.form.data.push($scope.originals[i].name);
				}
			})
		}
	});
</script>
<script src="/content/js/modal.js"></script>
<script src="/content/js/titlecase.js"></script>
<script src="/content/validators/sourceupload.js"></script>
<script src="/content/js/getRegions.js"></script>

{{/section}}